extends ddox.layout

block ddox.defs
	- import ddox.ddoc;
	- import ddox.entities;

block ddox.title
	- auto title = "API documentation";
	
block ddox.navigation
	- if( info.settings.navPackageTree )
		include ddox.inc.module-tree
	- else
		include ddox.inc.module-list

block ddox.body

	- void moduleInfoRec(Package pack)
		- foreach( p; pack.packages )
			- moduleInfoRec(p);
		- foreach( m; pack.modules )
			tr
				td
					a(href="#{info.linkTo(m)}")= m.qualifiedName
				td
					- if( m.docGroup )
						|!= formatDdocComment(m.docGroup.text, 0, sec => sec == "$Short")
	
	table
		col.caption
		tr
			th Module
			th Description
		- moduleInfoRec(info.rootPackage);
